  },

    //MODAL BUSCADOR//
    "flex-layout.col#content-buscador-header": {
      "children": [
        "modal-trigger#buscador-header"
      ],
      "props": {
        "width": "20%",
        "blockClass":[
          "icono-buscador-nuevo-header"
        ]
      }
    },

    "modal-trigger#buscador-header": {
      "children": [
        "image#icono-buscador-nuevo-header", "modal-layout#buscador-header"
      ]
    },
    "image#icono-buscador-nuevo-header": {
      "props": {
        "src": "/arquivos/search-icon-nuevo-menu.png",
        "blockClass":[
          "icono-buscador-nuevo-header"
        ]
      }
    },
    "modal-layout#buscador-header": {
      "children": [
        "modal-header#buscador-header",
        "flex-layout.col#header-items-desk-col-1"
      ],
      "props": {
        "blockClass": "modal-buscador-header",
        "backdrop": "none"
      }
    },
    //MODAL BUSCADOR//

    "modal-header#buscador-header": {
      "props": {
        "showCloseButton": true,
        "iconCloseSize": 24
      }
    },

  "flex-layout.col#header-items-desk-col-1": {
    "children": [
      "search-bar"
    ],
    "props": {
      "width": "55%",
      "blockClass": "input-buscador-nuevo-header"
    }
  },

  "search-bar": {
    "blocks": [
      "autocomplete-result-list.v2#desktop"
    ],
    "props": {
      "openAutocompleteOnFocus": true,
      "placeholder": "Buscar",
      "blockClass": ["contentSearch", "input-buscador-nuevo-header-content"]
    }
  },
  "autocomplete-result-list.v2#desktop": {
    "blocks": [
      "vtex.product-summary:product-summary.shelf#search-bar"
    ],
    "props": {
      "__unstableProductOriginVtex": true,
      //"productLayout": "HORIZONTAL",
      "maxSuggestedProducts":4,
      "historyFirst": true
    }
  },


