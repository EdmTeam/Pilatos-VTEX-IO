          "experimental__visibility-layout#contador-component-custom": {
            "title": "contador component visibility",
            "children": ["promocion-contador#contador-promocion"],
            "props": {
              "visible": false
            }
          },

          "promocion-contador#contador-promocion":{

  "props":{

    "blockClass": "contador-promocion-contenedor"
  }


},

