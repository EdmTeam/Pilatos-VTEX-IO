{
  /*New Banners InfoCard*/
  "flex-layout.row#bannersInfoCard": {
    "children": [
      "flex-layout.col#bannersInfoCardLeft",
      "flex-layout.col#bannersInfoCardRight"
    ],
    "title": "Banners InfoCard",
    "props": {
      "blockClass": "bannersInfoCard"
    }
  },

  "flex-layout.col#bannersInfoCardLeft": {
    "children": [
      "info-card#bannerLeft"
    ],
    "props": {
      "blockClass": "bannersInfoCardLeft"
    }
  },
  "flex-layout.col#bannersInfoCardRight": {
    "children": [
      "info-card#bannerRight"
    ],
    "props": {
      "blockClass": "bannersInfoCardRight"
    }
  },
  "info-card#bannerLeft": {
    "props": {
      "id": "bannerLeft",
      "isFullModeStyle": false,
      "textPosition": "left",
      "imageUrl": "/arquivos/Pilatos-CambioHome-Hombre-Desk.jpg",
      "mobileImageUrl": "/arquivos/Pilatos-CambioHome-Hombre-Mob.jpg",
      "callToActionUrl": "/",
      "blockClass": ["infocardBanner", "banner2-1"],
      "textAlignment": "center",
      "fetchpriority": "auto",
      "preload": true
    }
  },

  "info-card#bannerRight": {
    "props": {
      "id": "bannerRight",
      "isFullModeStyle": false,
      "textPosition": "left",
      "imageUrl": "/arquivos/Pilatos-CambioHome-Mujer-Desk.jpg",
      "mobileImageUrl": "/arquivos/Pilatos-CambioHome-Mujer-Mob.jpg",
      "callToActionUrl": "/",
      "blockClass": ["infocardBanner", "banner2-2"],
      "textAlignment": "center",
      "fetchpriority": "auto",
      "preload": true
    }
  },

  /*Banner Promotion*/
  "flex-layout.row#bannerDescuento": {
    "title": "Banner Horizontal",
    "children": [
      "list-context.image-list#bannerDescuento"
    ],
    "props": {
      "blockClass": "bannerDescuento"
    }
  },

  "list-context.image-list#bannerDescuento": {
    "children": ["slider-layout#bannerDescuento"],
    "props": {
      "height": 300,
      "images": [
        {
          "image": "/assets/vtex.file-manager-graphql/images/bc63b429-d81c-4b5d-a5f8-08d9d7d776e2___3398e5763e10571b06622a8efbe28476.png",
          "mobileImage": "/assets/vtex.file-manager-graphql/images/bc74c5e0-539b-4cab-a351-97db938d4c5d___494373f5a1a3e0415769b4d7dffc140d.png",
          "description": "Banner Descuentos",
          "link": {
            "url": "/artdist"
          }
        }
      ]
    }
  },

  "slider-layout#bannerDescuento": {
    "props": {
        "blockClass": "contentBanner",
        "itemsPerPage": {
            "desktop": 1,
            "tablet": 1,
            "phone": 1
        },
        "infinite": false,
        "showNavigationArrows": "never",
        "showPaginationDots": "never"
    }
  },

    /*Banners Categorias*/
    "flex-layout.row#bannersCategorias": {
      "title": "Banner Horizontal",
      "children": [
        "list-context.image-list#bannersCategorias"
      ],
      "props": {
        "blockClass": "bannersCategorias"
      }
    },

    "list-context.image-list#bannersCategorias": {
      "children": ["slider-layout#bannersCategorias"],
      "props": {
        "height": 333,
        "images": [
          {
            "image": "/arquivos/Pilatos-CambioHome-Categorias-Camisetas-Desk.png",
            "mobileImage": "/arquivos/Pilatos-CambioHome-Categorias-Camisetas-Desk.png",
            "link": {
              "url": "/camisetas"
            }
          },
          {
            "image": "/arquivos/Pilatos-CambioHome-Categorias-Jeans-Desk.png",
            "mobileImage": "/arquivos/Pilatos-CambioHome-Categorias-Jeans-Desk.png",
            "link": {
              "url": "/jeans"
            }
          },
          {
            "image": "/arquivos/Pilatos-CambioHome-Categorias-Gorras-Desk.png",
            "mobileImage": "/arquivos/Pilatos-CambioHome-Categorias-Gorras-Desk.png",
            "link": {
              "url": "/gorras"
            }
          },
          {
            "image": "/arquivos/Pilatos-CambioHome-Categorias-Tenis-Desk.png",
            "mobileImage": "/arquivos/Pilatos-CambioHome-Categorias-Tenis-Desk.png"
          },
          {
            "image": "/arquivos/Pilatos-CambioHome-Categorias-Accesorios-Desk.png",
            "mobileImage": "/arquivos/Pilatos-CambioHome-Categorias-Accesorios-Desk.png"
          },
          {
            "image": "/arquivos/Pilatos-CambioHome-Categorias-Deportivo-Desk.png",
            "mobileImage": "/arquivos/Pilatos-CambioHome-Categorias-Deportivo-Desk.png"
          },
          {
            "image": "/arquivos/Pilatos-CambioHome-Categorias-Buzos-Desk.png",
