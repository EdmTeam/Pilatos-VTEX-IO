          },
          {
            "image": "/arquivos/Pilatos-CambioHome-Categorias-Chaquetas-Desk.png",
            "mobileImage": "/arquivos/Pilatos-CambioHome-Categorias-Chaquetas-Desk.png"
          }
        ]
      }
    },

    "slider-layout#bannersCategorias": {
      "props": {
          "blockClass": "bannersCategorias",
          "itemsPerPage": {
              "desktop": 5,
              "tablet": 3,
              "phone": 3
          },
          "autoplay": {
            "timeout": 8000,
            "stopOnHover": true
           },
          "infinite": true,
          "showNavigationArrows": "never",
          "showPaginationDots": "never"
      }
    }
}
